                                        </Grid>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Button x:Name="btnPanelCollapse"  Style="{StaticResource TextPrimaryButtonStyle}">
                            <Image Width="16" Height="25" Margin="10">
                                <Image.Source>
                                    <BitmapImage UriSource="/Assets/common_rightbar_btn_close.png" DecodePixelWidth="16" DecodePixelHeight="25" />
                                </Image.Source>
                            </Image>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </Popup>
    </Grid>
