<control:LayoutAwarePage
    x:Class="Element.Reveal.Manage.Discipline.PunchCard.FinalWalkDown"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Element.Reveal.Manage.Discipline.Survey"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:WinAppLibrary.ServiceModels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:control="using:WinAppLibrary.Controls"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns:converter="using:WinAppLibrary.Converters"
    xmlns:c1="using:C1.Xaml.DateTimeEditors"
    xmlns:Xaml="using:C1.Xaml"
    xmlns:ui="using:WinAppLibrary.UI"
    mc:Ignorable="d">
    <Grid x:Name="LayoutRoot">
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/ITR/common_bg.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="154"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Grid.Column="0" x:Name="btnBack" Style="{StaticResource BackButtonStyle}" VerticalAlignment="Center" Padding="0" Margin="40,33,0,50"/>
        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="340"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" x:Name="btnSave" Style="{StaticResource SaveAppBarButtonStyle}" ToolTipService.ToolTip="Save Drawing" Tag="Save" Margin="0,34,0,36" VerticalAlignment="Center" HorizontalAlignment="Left"></Button>
        </Grid>
        <ScrollViewer x:Name="ScrollViewer" Grid.Row="1" Grid.ColumnSpan="2"
            AutomationProperties.AutomationId="ItemGridScrollViewer"
            Style="{StaticResource HorizontalScrollViewerStyle}">
            <Grid x:Name="LayoutSub" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"></ColumnDefinition>
                    <ColumnDefinition Width="500"></ColumnDefinition>
                    <ColumnDefinition Width="40"></ColumnDefinition>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition Width="40"></ColumnDefinition>
                    <ColumnDefinition Width="1150"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtProjectInfo" Text="Project Information" FontSize="25" VerticalAlignment="Center" FontFamily="Segoe UI Regular" Margin="5,5,5,5"></TextBlock>
                <TextBlock Grid.Row="0" Grid.Column="3" x:Name="txtAttendeesList" Text="Attendees - NFC enabled" FontSize="25" VerticalAlignment="Center" FontFamily="Segoe UI Regular" Margin="5,5,5,5"></TextBlock>
                <Grid Grid.Row="1" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="41"></RowDefinition>
                        <RowDefinition Height="41"></RowDefinition>
                        <RowDefinition Height="41"></RowDefinition>
                        <RowDefinition Height="41"></RowDefinition>
                        <RowDefinition Height="41"></RowDefinition>
                        <RowDefinition Height="41"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Originator" FontSize="25" VerticalAlignment="Center" FontFamily="Segoe UI Regular" Margin="5,5,5,5"></TextBlock>
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtOriginator" FontSize="25" VerticalAlignment="Center" FontFamily="Segoe UI Regular" Margin="5,5,5,5"></TextBox>
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Date" FontSize="25" VerticalAlignment="Center" FontFamily="Segoe UI Regular" Margin="5,5,5,5"></TextBlock>
                    <c1:C1DatePicker Grid.Row="1" Grid.Column="1" x:Name="txtDate" Xaml:C1NagScreen.Nag="True"  HorizontalAlignment="Left" Margin="5,0,5,0"></c1:C1DatePicker>
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Contractor" FontSize="25" VerticalAlignment="Center" FontFamily="Segoe UI Regular" Margin="5,5,5,5"></TextBlock>
                    <ComboBox Grid.Row="2" Grid.Column="1" x:Name="cboContractor"  Margin="5,5,5,5" ItemsSource="{Binding}">
                    </ComboBox>
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="System #" FontSize="25" VerticalAlignment="Center" FontFamily="Segoe UI Regular" Margin="5,5,5,5"></TextBlock>
                    <ComboBox Grid.Row="3" Grid.Column="1" x:Name="cboSystemNo"  Margin="5,5,5,5"  ItemsSource="{Binding}">
                    </ComboBox>
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="System Name" FontSize="25" VerticalAlignment="Center" FontFamily="Segoe UI Regular" Margin="5,5,5,5"></TextBlock>
                    <TextBlock Grid.Row="4" Grid.Column="1" x:Name="txtSystemNm" FontSize="25" VerticalAlignment="Center" FontFamily="Segoe UI Regular"  Margin="5,5,5,5"></TextBlock>
                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Disciplines" FontSize="25" VerticalAlignment="Center" FontFamily="Segoe UI Regular"  Margin="5,5,5,5"></TextBlock>
                    <!--<ComboBox Grid.Row="5" Grid.Column="1" x:Name="cboDisciplines"  Margin="5,5,5,5"></ComboBox>-->
                    <Grid Grid.Row="5" Grid.Column="1">
                        <StackPanel>
                            <Button x:Name="btnOpenPopUp" VerticalAlignment="Stretch" Width="340" BorderThickness="1"/>
                            <Popup IsLightDismissEnabled="True" x:Name="popDisciplines" Width="330">
                                <ListView x:Name="lvDisciplines" HorizontalAlignment="Stretch" VerticalAlignment="Top"
                                          SelectionMode="Multiple" FlowDirection="LeftToRight"
                                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                          ScrollViewer.VerticalScrollMode="Auto"
                                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                                          ItemContainerStyle="{StaticResource RevealListViewItemStyle}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="42">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="330"></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <Grid Grid.Column="0" Background="#FF7B90A1" >
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                        <TextBlock Text="{Binding ModuleName}"  FontSize="20" FontFamily="Segoe UI Regular" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap"></TextBlock>
                                                    </StackPanel>
                                                </Grid>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                    <ListView.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapGrid Orientation="Horizontal" MaximumRowsOrColumns="1"></WrapGrid>
                                        </ItemsPanelTemplate>
                                    </ListView.ItemsPanel>
                                </ListView>                                        
                            </Popup>
                        </StackPanel>
                    </Grid>
                </Grid>
                <Grid Grid.Row="1" Grid.Column="3">
                    <ListView x:Name="lvNFCSignList" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                              IsItemClickEnabled="True"
                              IsSwipeEnabled="True" ItemsSource="{Binding}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ui:UCNFCSign Margin="10"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
                <Grid Grid.Row="0" Grid.Column="5" Grid.RowSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="60"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Background="Black">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"></ColumnDefinition>
                            <ColumnDefinition Width="200"></ColumnDefinition>
                            <ColumnDefinition Width="500"></ColumnDefinition>
                            <ColumnDefinition Width="150"></ColumnDefinition>
                            <ColumnDefinition Width="150"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Punch #" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI Regular" Margin="5,5,5,5"></TextBlock>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="Equip/Line/Tag" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI Regular" Margin="5,5,5,5"></TextBlock>
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="Description" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI Regular" Margin="5,5,5,5"></TextBlock>
                        <TextBlock Grid.Row="0" Grid.Column="3" Text="Category" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI Regular" Margin="5,5,5,5"></TextBlock>
                        <TextBlock Grid.Row="0" Grid.Column="4" Text="Responsible" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI Regular" Margin="5,5,5,5"></TextBlock>
                    </Grid>
                    <ListView Grid.Row="1" x:Name="lvPunchList" 
                          HorizontalAlignment="Stretch" VerticalAlignment="Top" SelectionMode="Single"
                          ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollMode="Auto"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.HorizontalScrollMode="Disabled">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="41">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"></ColumnDefinition>
                                        <ColumnDefinition Width="200"></ColumnDefinition>
                                        <ColumnDefinition Width="500"></ColumnDefinition>
                                        <ColumnDefinition Width="150"></ColumnDefinition>
                                        <ColumnDefinition Width="150"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" x:Name="txtInsPunchNo" Text="{Binding PunchNo}"  FontSize="20" FontFamily="Segoe UI Regular" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap"></TextBlock>
                                    <TextBlock Grid.Column="1" x:Name="txtInsEquLinTag" Text="{Binding ELTData}"  FontSize="20" FontFamily="Segoe UI Regular" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap"></TextBlock>
                                    <TextBlock Grid.Column="2" x:Name="txtInsDesciption" Text="{Binding Description}"  FontSize="20" FontFamily="Segoe UI Regular" VerticalAlignment="Center" HorizontalAlignment="Left" TextWrapping="Wrap"></TextBlock>
                                    <TextBlock Grid.Column="3" x:Name="txtInsCategories" Text="{Binding CategoryName}"  FontSize="20" FontFamily="Segoe UI Regular" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap"></TextBlock>
                                    <TextBlock Grid.Column="4" x:Name="txtInsResponsible" Text="{Binding Responsible}"  FontSize="20" FontFamily="Segoe UI Regular" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap"></TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <StackPanel Grid.Row="2" Margin="10" HorizontalAlignment="Center" Orientation="Horizontal">
                        <Button x:Name="btnAdd" Content="Add New Line"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </ScrollViewer>
        <Grid Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2" x:Name="grScheduleDetail" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.RenderTransform>
                <TransformGroup>
                    <TranslateTransform x:Name="ttfDetailPanelTrans" />
                    <ScaleTransform x:Name="stfDetailPanelScale" ScaleY="0" />
                </TransformGroup>
            </Grid.RenderTransform>
        </Grid>
        <Grid Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="3" x:Name="grDetailPanel" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="Collapsed">
            <Grid.Background>
                <SolidColorBrush Color="Black" Opacity="0.8" />
            </Grid.Background>
        </Grid>
        <Grid Grid.ColumnSpan="2" Grid.RowSpan="3">
            <Popup Grid.Column="0" Grid.Row="0" x:Name="popLineAdd" Width="870" HorizontalAlignment="Left">
                <Popup.ChildTransitions>
                    <TransitionCollection>
                        <PaneThemeTransition />
                    </TransitionCollection>
                </Popup.ChildTransitions>
                <Border VerticalAlignment="Stretch" BorderBrush="{StaticResource ApplicationForegroundThemeBrush}" BorderThickness="0" Background="{StaticResource ApplicationPageBackgroundThemeBrush}" x:Name="RootPopupBorder">
                    <Grid x:Name="grSelectIWP">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20"></ColumnDefinition>
                            <ColumnDefinition Width="810"></ColumnDefinition>
                            <ColumnDefinition Width="20"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10"></RowDefinition>
                            <RowDefinition Height="700"></RowDefinition>
                            <RowDefinition Height="60"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Column="1" Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="340"></RowDefinition>
                                <RowDefinition Height="70"></RowDefinition>
                                <RowDefinition Height="60"></RowDefinition>
                                <RowDefinition Height="60"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"></ColumnDefinition>
                                <ColumnDefinition Width="255"></ColumnDefinition>
                                <ColumnDefinition Width="150"></ColumnDefinition>
                                <ColumnDefinition Width="255"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Row="0" Grid.ColumnSpan="4" x:Name="imgPicture" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform"/>
                            <StackPanel Grid.Row="1" Grid.ColumnSpan="4" Margin="10" HorizontalAlignment="Center" Orientation="Horizontal">
                                <Button x:Name="btnCapture" Content="Capture New Image"/>
                                <Button x:Name="btnLoad" Content="Find Image in Folders" Margin="20 0 0 0"/>
                                <Button x:Name="btnCancel" Content="Clear Image" Margin="20 0 0 0"/>
                            </StackPanel>
                            <TextBlock Grid.Column="0" Grid.Row="2" Text="Punch #" FontSize="20" FontFamily="Segoe UI Regular" VerticalAlignment="Center" HorizontalAlignment="Left" TextWrapping="Wrap"></TextBlock>
                            <TextBlock Grid.Column="1" Grid.Row="2" x:Name="txtInsPunchNo" FontSize="20" VerticalAlignment="Center" FontFamily="Segoe UI Regular" Margin="5,5,5,5" TextWrapping="Wrap"></TextBlock>
                            <TextBlock Grid.Column="2" Grid.Row="2" Text="Equip/Line/Tag" FontSize="20" FontFamily="Segoe UI Regular" VerticalAlignment="Center" HorizontalAlignment="Left" TextWrapping="Wrap"></TextBlock>
                            <ComboBox Grid.Column="3" Grid.Row="2" x:Name="cboInsEquLinTag" FontSize="20" ItemsSource="{Binding}" Margin="5,5,5,5"></ComboBox>
                            <TextBlock Grid.Column="0" Grid.Row="3" Text="Category" FontSize="20" FontFamily="Segoe UI Regular" VerticalAlignment="Center" HorizontalAlignment="Left" TextWrapping="Wrap"></TextBlock>
                            <ComboBox Grid.Column="1" Grid.Row="3" x:Name="cboInsCategory" FontSize="20" ItemsSource="{Binding}" Margin="5,5,5,5"></ComboBox>
                            <TextBlock Grid.Column="2" Grid.Row="3" Text="Responsible" FontSize="20" FontFamily="Segoe UI Regular" VerticalAlignment="Center" HorizontalAlignment="Left" TextWrapping="Wrap"></TextBlock>
                            <TextBox Grid.Column="3" Grid.Row="3" x:Name="txtInsResponsible" FontSize="20" VerticalAlignment="Center" FontFamily="Segoe UI Regular"></TextBox>
                            <TextBlock Grid.Column="0" Grid.Row="4" Text="Description" FontSize="20" FontFamily="Segoe UI Regular" VerticalAlignment="Top" HorizontalAlignment="Left" TextWrapping="Wrap"></TextBlock>
                            <TextBox Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="3" Grid.RowSpan="2" x:Name="txtInsDescription" FontSize="20" VerticalAlignment="Top" FontFamily="Segoe UI Regular" Margin="5,5,5,5"
                                     Height="160" AcceptsReturn="True" IsSpellCheckEnabled="True" IsEnabled="True">
                            </TextBox>
                        </Grid>
                        <Grid Grid.Column="1" Grid.Row="2">
                            <StackPanel Margin="10" HorizontalAlignment="Center" Orientation="Horizontal">
                                <Button x:Name="btnPanelCollapse" Content="Close Popup" Margin="100,0,30,0"/>
                                <Button x:Name="btnPanelCancel" Content="Cancel"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </Popup>
        </Grid>
    </Grid>
</control:LayoutAwarePage>
    