                      AutomationProperties.Name="Drawing Items"
                      ScrollViewer.HorizontalScrollMode="Enabled"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto"
                          ScrollViewer.IsHorizontalScrollChainingEnabled="False" 
                          SelectionMode="None"
                          IsItemClickEnabled="True"
                      ItemClick="gvDrawing_ItemClick">
                    
                        <GridView.ItemTemplate>
                            <DataTemplate>
                                <Image x:Name="imgThumb" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="Fill" Canvas.ZIndex="0"
                                   Tag="DrawingItem">
                                    <Image.Source>
                                        <BitmapImage UriSource="{Binding ImagePath}" DecodePixelHeight="400" DecodePixelWidth="400" />
                                    </Image.Source>
                                </Image>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                        <GridView.GroupStyle>
                            <GroupStyle>
                                <GroupStyle.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid Margin="1,0,0,6">
                                            <Button AutomationProperties.Name="Group Title"
                                                Style="{StaticResource TextPrimaryButtonStyle}" >
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Title}" Margin="3,-7,10,10" Style="{StaticResource GroupHeaderTextStyle}" />
                                                    <TextBlock Text="{StaticResource ChevronGlyph}" FontFamily="Segoe UI Symbol" Margin="0,-7,0,10" 
                                                           Style="{StaticResource GroupHeaderTextStyle}"/>
                                                </StackPanel>
                                            </Button>
                                        </Grid>
                                    </DataTemplate>
                                </GroupStyle.HeaderTemplate>
                                <GroupStyle.Panel>
                                    <ItemsPanelTemplate>
                                        <VariableSizedWrapGrid ItemWidth="150" ItemHeight="150" Orientation="Vertical" Margin="0,0,80,0"
                                                           MaximumRowsOrColumns="3">
                                        </VariableSizedWrapGrid>
                                    </ItemsPanelTemplate>
                                </GroupStyle.Panel>
                            </GroupStyle>
                        </GridView.GroupStyle>
                </control:RandomSizedItemGrid>
            </SemanticZoom.ZoomedInView>
        </SemanticZoom>
        -->

    </Grid>
</control:LayoutAwarePage>